<div class="prod_home col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
  <h1>Current Cart</h1>
  <div class="panel panel-default">
      <table class="table">
          <tr>
              <td>S.No.</td>
              <td>Product</td>
          </tr>
          <% i = 0 %>
          <% @line_items.each do |line_item| %>
          <% i+=1 %>
          <tr>
              <td><%= i %></td>
              <td><%=  link_to line_item.product.model_num , line_item %></td>
          </tr>
          <% end %>
      </table>
  </div>
  <div>
      <%= link_to 'Continue Shopping' , products_path,:class=> 'col-md-5 col-md-offset-2 col-xs-6 col-xs-offset-2' %>
      <%= link_to 'Submit' , order_path(@line_items.first.order_id),:class=> 'col-md-3 col-md-offset-1 col-xs-3 col-xs-offset-1' %>
  </div>
</div>
