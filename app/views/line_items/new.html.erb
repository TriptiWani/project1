<h1>New Item</h1>
<fieldset align="center">
    <p>Model Num :
        <%= @product.model_num %></p>
    <p>Color :
        <%= @product.color %></p>
</fieldset>
<div class="col-xs-offset-4">
    <%= form_for @line_item do |f| %>
    <fieldset>
        <%= f.label :product_id , :hidden => true%>
        <%= f.text_field :product_id, :value=>@product.id, :hidden => true  %>
    </fieldset>
    <fieldset>
        <%= f.label :Order_id , :hidden => true%>
        <%= f.text_field :order_id, :value=>@order.id  ,:hidden=>true%>

    </fieldset>
    <fieldset>
        <%= f.label :quantity%>
        <%= f.text_field :quantity %>
    </fieldset>
    <%= f.submit 'Add Quantity', :class=> 'col-xs-offset-3' %>
    <% end %>
</div>