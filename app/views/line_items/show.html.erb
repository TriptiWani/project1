<div class="prod_home col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
    <div class="panel panel-default ">
        <div class="panel-heading">Item Details</div>
        <table class="table">
            <tr>
                <td>Order Number</td>
                <td><%= @line_item.order_id %></td>
            </tr>
            <tr>
                <td>Product</td>
                <td><%= (link_to @line_item.product.model_num , @line_item.product)%></td>
            </tr>
            <tr>
                <td>Color</td>
                <td><%= @line_item.product.color %></td>
            </tr>
            <tr>
                <td>Quantity</td>
                <td><%= @line_item.quantity %></td>
            </tr>
            <tr>
                <td>Price</td>
                <td><%= @line_item.product.money_in(@current_user.currency).format %></td>
            </tr>
        </table>
        <% if @line_item.product.image.present? %>
        <div>
            <%= (link_to (image_tag @line_item.product.image ,:class=>'col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3') , @line_item.product) %>
        </div>
        <% end %>
    </div>
</div>
