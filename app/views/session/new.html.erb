<div class="prod_home">
  <h1>Login</h1>
  <div class="fb_twitter_login col-md-2 col-md-offset-4 col-xs-2 col-xs-offset-4">
    <div class="col-md-1 col-xs-1 fbarea">
      <div class="facebook_div">
        <div><%=link_to image_tag('fb.png'), '/auth/facebook', :class => 'fb_button' %></div>
      </div>
    </div>
    <div class="col-md-1 col-xs-1 col-xs-offset-2 col-md-offset-2 fbarea">
      <div class="facebook_div">
        <div><%=link_to image_tag('twitter.png'), '/auth/twitter', :class => 'fb_button twitter_button' %></div>
      </div>
    </div>
  </div>
  <div class="col-xs-4 col-md-4 col-md-offset-4 col-xs-offset-4">
      <%= form_tag '/login' do %>
      <fieldset class="col-xs-6 col-md-6 col-md-offset-3 col-xs-offset-3" >
        <%= label_tag :email,nil,:autofocus => true,:class=>'email_label' %>
        <%= text_field_tag :email%>
      </fieldset>
      <fieldset class="col-xs-8 col-md-8 col-md-offset-2 col-xs-offset-2">
        <%= label_tag :password%>
        <%= password_field_tag :password  %>
      </fieldset>
      <%= submit_tag 'Login',:class=>  'col-xs-offset-6'%>
      <% end %>
  </div>
</div>
