<!DOCTYPE html>
<html>
<head>
  <title>InventoryManagement</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header class="header">
  <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to 'Home',root_path %></span>
Inventory Management
</header>
<body>
  <nav>
    <% if @current_user.present? %>
      <% if @current_user.admin %>
        <%= link_to 'All Users' ,users_path  %>
        <%= link_to 'Manage Inventory',manage_products_path  %>
      <% end %>
      <%= "Welcome #{ @current_user.first_name} #{ @current_user.last_name}" %>
        <div>
          <%= image_tag @current_user.image,:class => 'display' %>
        </div>
        <div>
          <%= link_to 'Orders' , orders_path %>
        </div>
        <div>
          <%= link_to 'View Products' , products_path %>
        </div>
        <div class="my_nav">
        <%= link_to "My Profile", user_path(@current_user.id) %>
        <%= link_to "Logout" , login_path , :method => :delete%>
      </div>

    <% else %>
      <%= link_to 'Sign In' , new_user_path %>
      <%= link_to 'Log In',login_path %>
    <% end %>
  </nav>
<%= yield %>

</body>
<footer class="footer">
  Copyrights reserved &copy; 2016
</footer>
</html>
