<div class="prod_home col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
    <div class="panel  panel-default">
        <div class="panel-heading">User Details</div>
        <table class="table">
            <tr>
                <% if @user.image.present? %>
                <%= cl_image_tag @user.image ,:class => 'col-xs-6 col-xs-offset-3 col-md-8 col-md-offset-2' %>
                <% end %>
            </tr>
            <tr>
                <td>Name
                </td>
                <td>
                    <%= @user.first_name.concat(' '.concat(@user.last_name)) %>
                </td>
            </tr>
            <% if @user.email.present? %>
              <tr>
                  <td>
                    Email id
                  </td>
                  <td>
                      <%= @user.email %>
                  </td>
              </tr>
            <% end %>
            <% if @user.dob.present? %>
              <tr>
                  <td>
                    Date of birth
                  </td>
                  <td>
                      <%= @user.dob.strftime '%B %e, %Y' %>
                  </td>
              </tr>
            <% end %>
            <% if @user.gender.present? %>
              <tr>
                  <td>
                      Gender
                  </td>
                  <td>
                      <%= @user.gender %>
                  </td>
              </tr>
            <% end %>
            <% if @user.phone_number.present? %>
              <tr>
                  <td>
                      Phone Number
                  </td>
                  <td>
                      <%= number_to_phone(@user.phone_number) %>
                  </td>
              </tr>
            <% end %>
            <% if @user.currency.present? %>
              <tr>
                  <td>
                    Preferred Currency
                  </td>
                  <td>
                      <%= @user.currency %>
                  </td>
              </tr>
            <% end %>
            <% if @user.address.present? %>
              <tr>
                  <td>
                    Address
                  </td>
                  <td>
                      <%= @user.address %>
                  </td>
              </tr>
            <% end %>
        </table>
    </div>
    <div class="order_details">
        <% if @user.id.eql?@current_user.id %>
          <%= link_to 'Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe , edit_user_path %>
          <%= link_to 'Delete <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, user_path, :method => 'delete' %>
        <% end %>
    </div>
</div>
