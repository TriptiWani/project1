<div class="panel panel-default table_display">
  <div class="panel-heading">User Details</div>
  <table class="table">
    <tr>
      <% if @user.image.present? %>
      <%= image_tag @user.image ,:class => 'profile_image' %>
      <% end %>
    </tr>
    <tr>
      <td>Name </td>
      <td> <%= @user.first_name.concat(' '.concat(@user.last_name)) %></td>
    </tr>
    <tr>
      <td>Email id </td>
      <td> <%= @user.email %></td>
    </tr>
    <tr>
      <td>Date of birth </td>
      <td> <%= @user.dob.strftime '%B %e, %Y' %></td>
    </tr>
    <tr>
      <td> Gender</td>
      <td> <%= @user.gender %></td>
    </tr>
    <tr>
      <td> Phone Number</td>
      <td> <%= number_to_phone(@user.phone_number) %></td>
    </tr>
    <tr>
      <td>Address </td>
      <td> <%= @user.address %></td>
    </tr>
  </table>
</div>
<div class="order_details">
  <% if @user.id.eql?@current_user.id %>

  <%= link_to 'Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe , edit_user_path %>
  <%= link_to 'Delete <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, user_path, :method => 'delete' %>
  <% end %>
</div>
