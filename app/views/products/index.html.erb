<div class="row prod_home">

    <% @products.each do |product| %>
          <div class="col-md-4 col-xs-6">
          <% if product.image.present? %>

            <%= link_to image_tag(product.image, :class => 'product_display') , product_path(product[:id]) %>
          <% else %>

            <a href="/products/<%=product[:id]  %> " class="no_display">
              <p class="display_product_name">
                <%= product[:model_num] %>
              </p>
              <%= image_tag('Nopicture.gif', :class => 'product_display') %>
            </a>

          <% end %>
      </div>
    <% end %>

</div>
